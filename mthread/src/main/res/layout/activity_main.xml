<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_normalT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NormalT"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btn_handleT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HandleT"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_normalT" />

    <Button
        android:id="@+id/btn_ExecutorsT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Executors"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_handleT" />

    <Button
        android:id="@+id/btn_handThread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HandlerThread"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_ExecutorsT" />


    <Button
        android:id="@+id/btn_syncThread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SyncThread"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_handThread" />

</androidx.constraintlayout.widget.ConstraintLayout>